{
    "compilerOptions": {
        "noEmitOnError": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "lib": ["dom", "es6"],
        "types": [
            "jasmine",
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "files": [
        // "./typings/index.d.ts",
        "./io2-mobile-cards.ts",
        "./src/card.ts",
        "./src/tinder-card.ts",
        "./src/index.ts"
    ]
}
